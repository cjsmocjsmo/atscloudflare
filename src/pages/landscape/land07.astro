---
import Layout from "../../layouts/Layout.astro";
import HomeBtn from "../../components/HomeBtn.astro";
---

<Layout title="Comments">
    <main>
        <HomeBtn />
        <div>
            <div class="landImg">
                <img
                    class="land"
                    src="https://atsio.xyz/static/landscape/20220731_112348.webp"
                    alt="Image"
                    aria-hidden="true"
                />
            </div>
        </div>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
        min-height: 100vh;
    }
    .landImg {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 10em;
    }

    .land {
        border-radius: 8px;
        width: 1000px;
        height: auto;
    }

    @media (max-width: 800px) {
        .land {
            width: 600px;
        }
    }

    @media (max-width: 600px) {
        .land {
            width: 400px;
        }
    }

    @media (max-width: 400px) {
        .land {
            width: 300px;
        }
    }
</style>
