---
import Layout from "../layouts/Layout.astro";
import HomeBtn from "../components/HomeBtn.astro";
---

<Layout title="Thank You">
    <main>
        <HomeBtn />
        <h1>Thank You for your comment</h1>
    </main>
</Layout>

<style>
    h1 {
        text-align: center;
    }
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        background-color: black;
        font-size: 20px;
        line-height: 1.6;
        min-height: 100vh;
    }
</style>
